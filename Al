// ====== 根目录 README.md（点击部署按钮） ======
[![Deploy with Vercel](https://vercel.com/button)](https://vercel.com/new/clone?repository-url=https://github.com/ceoal/ceoal-text)
仓库结构：frontend/ Next.js | backend/ NestJS | admin/ 数据看板 | pages/code.js 明文源码框
===================================================================
// ====== pages/code.js ====== （明文展示源码页）
import Prism from 'prismjs'; import 'prismjs/themes/prism-tomorrow.css';
export default function Code(){
const src=`${frontendCode}${backendCode}${adminCode}${scriptCode}${readmeCode}`;
return(<main>
  <h1>📦 CEOAL 完整源码</h1>
  <button onClick={()=>navigator.clipboard.writeText(src)}>一键复制</button>
  <pre><code className="language-js" dangerouslySetInnerHTML={{__html:Prism.highlight(src,Prism.languages.javascript,'javascript')}}/>
  </pre>
</main>);}
===================================================================
// ====== frontend/next.config.js ======
module.exports={reactStrictMode:true,output:'standalone'};
===================================================================
// ====== frontend/pages/index.js ======
export default function Home(){return(<h1>Hello CEOAL</h1>);}
===================================================================
// ====== backend/src/main.ts ======
import {NestFactory} from '@nestjs/core';import {AppModule} from './app.module';
async function bootstrap(){const app=await NestFactory.create(AppModule);await app.listen(4000);}
bootstrap();
===================================================================
// ====== backend/src/app.module.ts ======
import {Module} from '@nestjs/common';@Module({imports:[],controllers:[],providers:[]}) export class AppModule{}
===================================================================
// ====== admin/pages/index.js ======
import useSWR from 'swr'; export default function Admin(){const {data}=useSWR('/api/stats');return <pre>{JSON.stringify(data,null,2)}</pre>;}
===================================================================
// ====== scripts/deploy.sh ======
#!/bin/bash
vercel --prod
===================================================================
// ====== .github/workflows/deploy.yml ======
name:Deploy on: [push] jobs:build:runs-on:ubuntu-latest steps:
- uses:actions/checkout@v4
- run:npx vercel --prod --token=${{ secrets.VERCEL_TOKEN }}
